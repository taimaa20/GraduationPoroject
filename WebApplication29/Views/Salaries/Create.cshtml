@model WebApplication29.Models.Salary

@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var id = ViewBag.EmployeeId;
    var Employeename = ViewBag.Employeename;

}

<h1>Add Salary</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group mb-3">
                
                 <label class="Salary1" for="Salary1">Salary</label>
                  <input name="Salary1"class="form-control" id="Salary1"    placeholder="Salary" required>
                              
            </div>
             <div class="form-group mb-3">
                
                <label class="Tracks" for="Tracks">Tacks</label>
                  <input name="Tracks"class="form-control" id="Tracks"   placeholder="Tacks" required>
            </div>
           <div class="form-group mb-3">
            
                <label class="Inventives" for="Inventives">Inventives</label>
                  <input name="Inventives"class="form-control" id="Inventives"   placeholder="Inventives" required>
            </div>
           <div class="form-group mb-3">
         
              <label class="MonthOfSalary" for="MonthOfSalary">MonthOfSalary</label>
                  <input name="MonthOfSalary"class="form-control" id="MonthOfSalary" type="date"    placeholder="Tracks" required>
          
            </div>
           <div class="form-group mb-3">
         
               <label class="TotalSalary" for="TotalSalary">TotalSalary</label>
                  <input name="TotalSalary"class="form-control" id="TotalSalary"   placeholder="TotalSalary" required>
           
            </div>
           <div class="form-group mb-3">
                <label class="id" for="id">Employee name : @Employeename</label>
                  <input name="id"class="form-control" id="id"   hidden value="@id" required>
           
            </div>
           <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



