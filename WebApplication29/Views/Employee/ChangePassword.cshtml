@{

    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
     var FirstName=ViewBag.FirstName;
     var LastName=ViewBag.LastName;
     var Gender=ViewBag.Gender;
     var Email=ViewBag.Email;
     var PhoneNumber=ViewBag.PhoneNumber;
     var Adress=ViewBag.Adress;
     var City=ViewBag.City;
     var BirthDate=ViewBag.BirthDate;
     var UserImage=ViewBag.UserImage ;


}

    <meta name="viewport" content="width=device-width, initial-scale=1">
	



<div class="container light-style flex-grow-1 container-p-y">

    <h4 class="font-weight-bold py-3 mb-4">
      Account settings
    </h4>

    <div class="card overflow-hidden">
      <div class="row no-gutters row-bordered row-border-light">
        <div class="col-md-3 pt-0">
          <div class="list-group list-group-flush account-settings-links">
            <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account-general">General</a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-change-password">Change password</a>
            <a class="list-group-item list-group-item-action" data-toggle="list" href="#account-info">Info</a>
             </div>
        </div>
        <div class="col-md-9">
          <div class="tab-content">
     
            <div class="tab-pane fade active show" id="account-general">
                         <form asp-action="Profile" enctype="multipart/form-data">
              <div class="card-body media align-items-center">
<img src="~/Image/@UserImage" asp-append-version="true" width="150px" height="100" style="border-radius:50%;" />
                <div class="media-body ml-4">
                   <div class="input-group">
                     <label class="label">ImageFile</label>
                     <input class="input--style-4" type="file" name="ImageFile" accept="image/*" />
                      </div>

                  <div class="text-light small mt-1">Allowed JPG, GIF or PNG. Max size of 800K</div>
                </div>
              </div>
              <hr class="border-light m-0">

              <div class="card-body">

    <div class="form-group" style="margin-right:15px;">
                  <label class="form-label" >Username</label>
                  <input type="text" readonly name="FirstName" class="form-control mb-1" value="@FirstName"></div>
              <div class="form-group" style="margin-right:15px;">
                  <label class="form-label" >LastName</label>
                  <input type="text" name="LastName" readonly class="form-control" value="@LastName">
                
       
              </div>
                    
                <div class="form-group"style="margin-right:15px;">
                  <label class="form-label" >Gender</label>
                  <input type="text"readonly name="Gender" class="form-control mb-1" value="@Gender">
                 
                </div>
                <div class="form-group" style="margin-right:15px;">
                  <label class="form-label" >Email</label>
                  <input type="email" name="Email" class="form-control" value="@Email">
                </div>
             
                <div class="form-group" style="margin-right:15px;">
                  <label class="form-label" >PhoneNumber</label>
                  <input type="text" pattern="[7]{1}[0-9]{9}" title="Phone number start with 7 and remaing 9 digit with 0-9"  name="PhoneNumber" class="form-control mb-1" value="@PhoneNumber">
                 
                </div>
                <div class="form-group" style="margin-right:15px;">
                  <label class="form-label" >BirthDate</label>
                  <input type="datetime" name="BirthDate" class="form-control" value="@BirthDate">
                </div>
              
                <div class="form-group" style="margin-right:15px;">
                  <label class="form-label" >Address</label>
                  <input type="text" pattern="^[a-zA-Z]{3,15}$" title="Address may only contain letters "  name="Adress" class="form-control mb-1" value="@Adress">
                 
                </div>
                <div class="form-group" style="margin-right:15px;">
                  <label class="form-label" >City</label>
                  <input type="text" name="City" pattern="^[a-zA-Z]{3,15}$" title="City may only contain letters "  class="form-control" value="@City">
                </div>
              
                   <button type="submit" class="btn btn-primary">Save changes</button>
                     </form>
            </div>
            </div>
            
               
          
            <div class="tab-pane fade" id="account-change-password">
             
              <div class="card-body pb-2">
                     <form asp-action="ChangePasswordBasic">
                <div class="form-group">
                  <label class="form-label">Current password</label>
                  <input type="password"  class="form-control" name="CurrentPassword">
                </div>

                <div class="form-group">
                  <label class="form-label">New password</label>
                  <input type="password" class="form-control"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title="at least one number and one uppercase and lowercase letter, and at least 6 or more characters" name="NewPassword" >
                </div>

                <div class="form-group">
                  <label class="form-label">Repeat new password</label>
                  <input type="password" class="form-control"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title="at least one number and one uppercase and lowercase letter, and at least 6 or more characters" name="ConfirmPssword">
                </div>

       
                    <button type="submit" class="btn btn-primary">Save changes</button>
              </form>
                     </div>
            </div>
            <div class="tab-pane fade" id="account-info">
      
                    <div class="card-body pb-2">
                         <form asp-action="UserNameUpdate">
                <div class="form-group">
                  <label class="form-label">Current UserName</label>
                  <input type="text"  name="CurrentUserName" class="form-control" >
                </div>
                <div class="form-group">
                  <label class="form-label">New UserName</label>
                  <input type="text" name="NewUserName" pattern="^[a-zA-Z][a-zA-Z0-9-_.]{5,12}$" title="alphanumeric 6 to 12 chars"   class="form-control" >
                </div>
                
         
                                 <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
                     </div>
              </div>
              <hr class="border-light m-0">
              <div class="card-body pb-2">
               
              </div>
      
            </div>

              </div>
            </div>
          </div>

   




