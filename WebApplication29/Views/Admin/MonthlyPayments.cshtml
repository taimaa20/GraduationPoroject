@model IEnumerable<WebApplication29.Models.joins>

@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
 
       string[] TableHeaders = new string[]{"PaymentId","PaymentType" ,"PaymentAmount","CardNumber","paymentDate","FirstName","LastName","PhoneNumber"
     };

}
         

        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2  mw-100 navbar-search"  style="margin-bottom:15px;" asp-action="MonthlyPayments">
                <div class="input-group">
                      <label>Start Month</label>
                            
                      <input input type="month" name="startDate" class="form-control bg-light border-0 small"   placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                        
                      <label>End Month </label>
                            <input input type="month" name="endDate" class="form-control bg-light border-0 small"   placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                        <input type="submit" value="search"  class="btn btn-primary " />   
                          
                        </div> 

              
                 </form>

                
      <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">All User Services </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                                            @{
                    foreach (var head in TableHeaders)
                    {
                        <th>
                            @head
                        </th>
                    }
                }
                                        </tr>
                                    </thead>
                                    <tbody>
                                       
            @{
                
                 @if (Model != null)
            {
                foreach (var data in Model)
             
                {

                    <tr>
                        <td>@data.payment.PaymentId </td>
                            <td>@data.payment.PaymentType </td>
                      <td>@data.payment.PaymentAmount </td>
                       <td>@data.payment.CardNumber </td>
                           <td>@data.payment.PaymentDate </td>
                            <td>@data.users.FirstName </td>
                      <td>@data.users.LastName </td>
                       <td>@data.users.PhoneNumber </td>
                    </tr>


                }
            }
            }
                                    </tbody>
                             </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>

   
</div>
