                         <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2  mw-100 navbar-search"  style="margin-bottom:15px;" asp-action="SalarySlip">
                <div class="input-group">
                      <label >Start Month</label>
                            
                      <input input type="month" name="date" class="form-control bg-light border-0 small"   placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                        
                        <input type="submit" value="search"  class="btn btn-primary " />   
                          
                        </div> 

              
                 </form>
                   <div class="receipt-main col-xs-10 col-sm-10  col-xs-offset-1 col-sm-offset-1 col-md-offset-3" id="target">
                         <div class="row" style="display: block;">
                                <div class="receipt-header receipt-header-mid">
                                    <div class="col-xs-8 col-sm-8 col-md-8 text-left">
                                        <div class="receipt-right">
                                            <h5>@FirstName @LastName </h5>
                                            <p><b>Employee num :</b> @UserId</p>
                                            <p><b>Mobile :</b>@PhoneNumber</p>
                                            <p><b>Email :</b> @Email</p>
                                            <p><b>Address :</b> @Adress</p>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 col-sm-4 col-md-4">
                                        <div class="receipt-left">

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Description</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="col-md-9">Deposit day</td>
                                            <td class="col-md-3"><i class="fa fa-inr"></i>@MonthOfSalary</td>
                                        </tr>
                                        <tr>
                                            <td class="col-md-9">Inventives</td>
                                            <td class="col-md-3"><i class="fa fa-inr"></i>@Inventives</td>
                                        </tr>
                                             <tr>
                                            <td class="col-md-9"> Taxes</td>
                                            <td class="col-md-3"><i class="fa fa-inr"></i>@Tracks</td>
                                        </tr>
                                       
                                        <tr>
                                            <td class="col-md-9">Bais salary</td>
                                            <td class="col-md-3"><i class="fa fa-inr"></i>@Salary1</td>
                                        </tr>

                                                                                  <tr>
                                            <td class="col-md-9">Final salary</td>
                                            <td class="col-md-3"><i class="fa fa-inr"></i>@TotalSalary</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="row" style="display: block;">
                                <div class="receipt-header receipt-header-mid receipt-footer">
                                    <div class="col-xs-8 col-sm-8 col-md-8 text-left">
                                        <div class="receipt-right">
                                            <p><b>Date :</b> @DateTime.Now</p>
                                            <h5 style="color: rgb(140, 140, 140);">Thanks for your effort.!</h5>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 col-sm-4 col-md-4">
                                        <div class="receipt-left">
                                        
                                        </div>
                                    </div>
                                </div>
                            </div>

                    
                      <input style="margin-left:5px;" type="button" onclick="generate()" class="btn btn-primary" id="cmd"  value="Export To PDF" />
                </div>
                

                </div>
      

