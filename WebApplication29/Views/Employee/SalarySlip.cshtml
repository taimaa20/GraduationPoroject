@model IEnumerable<WebApplication29.Models.joins>
@{

    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    var FirstName = ViewBag.FirstName;
    var LastName =   ViewBag.LastName;
    var UserId = ViewBag.UserId;
    var Email =    ViewBag.Email ;
    var Adress =    ViewBag.Adress;
    var MonthOfSalary =   ViewBag.MonthOfSalary ;
    var Inventives =    ViewBag.Inventives ;
    var Tracks =     ViewBag.Tracks  ;
    var Salary1 =    ViewBag.Salary1  ;
    var TotalSalary = ViewBag.TotalSalary;
    var PhoneNumber = ViewBag.PhoneNumber;

    }

<head>
    <meta charset="utf-8">
    <!--  This file has been downloaded from bootdey.com  on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->


    <script>
        $(function () {
            var doc = new jsPDF();
            var specialElementHandlers = {
                '#editor': function (element, renderer) {
                    return true;
                }
            };
            $('#cmd').click(function () {
                doc.fromHTML($('#target').html(), 15, 15, {
                    'width': 170,
                    'elementHandlers': specialElementHandlers
                });
                doc.save('sample-file.pdf');
            });
        });
    </script>

</head>



<div style="margin-left: 20%;">
              
