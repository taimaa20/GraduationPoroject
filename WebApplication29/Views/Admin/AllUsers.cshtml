@model IEnumerable<WebApplication29.Models.User>

@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
 
       string[] TableHeaders = new string[]{"UserID","UserImage" ,"Fname"
          ,"Lname"," Gender"," Email","PhoneNumber","Adress","City","Birthdate"
     };

}
     <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
                    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
                        For more information about DataTables, please visit the <a target="_blank"
                            href="https://datatables.net">official DataTables documentation</a>.</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                        </div>
                        <form asp-action="AllUsers">
        <label>startdate</label> <input type="text" name="name" />
      

        <input type="submit" value="Submit" />
                <button asp-action="AllUsers" >get all</button>
    </form>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                                            @{
                    foreach (var head in TableHeaders)
                    {
                        <th>
                            @head
                        </th>
                    }
                }
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Name</th>
                                            <th>Position</th>
                                            <th>Office</th>
                                            <th>Age</th>
                                            <th>Start date</th>
                                            <th>Salary</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                       
            @{
                
                 @if (Model != null)
            {
                foreach (var data in Model)
             
                {

                    <tr>
                        <td>@data.UserId </td>
                        <td>@data.UserImage </td>
                        <td>@data.FirstName </td>

                        <td>@data.LastName </td>
                        <td>@data.Gender </td>
                        <td>@data.Email</td>
                        <td>@data.PhoneNumber</td>
                         <td>@data.Adress</td>
                          <td>@data.City</td>
                           <td>@data.BirthDate</td>

                       
                    </tr>


                }
            }
            }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>

<div class="table">
    <table class="table table-bordered table-hover" id="dataTable">
        <thead>
            <tr>
                @{
                    foreach (var head in TableHeaders)
                    {
                        <th>
                            @head
                        </th>
                    }
                }
            </tr>
        </thead>
        <tbody>

            @{
                
                 @if (Model != null)
            {
                foreach (var data in Model)
             
                {

                    <tr>
                        <td>@data.UserId </td>
                        <td>@data.UserImage </td>
                        <td>@data.FirstName </td>

                        <td>@data.LastName </td>
                        <td>@data.Gender </td>
                        <td>@data.Email</td>
                        <td>@data.PhoneNumber</td>
                         <td>@data.Adress</td>
                          <td>@data.City</td>
                           <td>@data.BirthDate</td>

                       
                    </tr>


                }
            }
            }
        </tbody>
    </table>
   
</div>
